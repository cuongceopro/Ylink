<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <ImageButton
        android:id="@+id/banner"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/banner" />
    
    
    <Button 
        android:id="@+id/Link_bt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/banner"
        android:textSize="15sp"
        android:background="#1987E5"
        android:textColor="#FFFFFF"
        android:text="@string/Link_bt"/>
    
    <ImageButton
        android:id="@+id/YNUhome"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Link_bt"
        android:src="@drawable/ynu" />
    
    <ImageButton
        android:id="@+id/kiban"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/YNUhome"
        android:src="@drawable/itsc" />
    
    <ImageButton
        android:id="@+id/shienka"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/kiban"
        android:src="@drawable/shienka" />
    
    <ImageButton
        android:id="@+id/OPAC"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/shienka"
        android:src="@drawable/opac" />
    
     <ImageButton
        android:id="@+id/ryugakusei"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/OPAC"
        android:src="@drawable/kokusai" />
    
    <ImageButton
        android:id="@+id/shirabasu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ryugakusei"
        android:src="@drawable/shirabasu" />
    
    
   
    
    
   	<Button 
        android:id="@+id/Share_bt"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="1dp"
        android:textSize="15sp"
        android:background="#1987E5"
        android:textColor="#FFFFFF"
        android:text="@string/Share_bt" />
    
     <Button 
        android:id="@+id/Campusinfo_bt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_toLeftOf="@+id/Share_bt"
        android:layout_toRightOf="@+id/News_bt"
        android:layout_alignParentBottom="true"
        android:textSize="15sp"
        android:background="#1987E5"
        android:textColor="#FFFFFF"
        android:text="@string/Campusinfo_bt" />
     
     
     <Button 
        android:id="@+id/News_bt"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="1dp"
        android:textSize="15sp"
        android:background="#1987E5"
        android:textColor="#FFFFFF"
        android:text="@string/News_bt" />
</RelativeLayout>
